<% if not classes.empty? %>
<div class="section">
  <div class="title"> <%= title %> </div>
  <% classes.each do |c| %>
  <div class="class" id="<%= slug(Russian::transliterate(c.title)) %>">
    <img src="<%= digest_url("/timetable/#{c.image}") %>"/>
    <div class="description">
      <div class="title"> <%= c.title %> </div>
      <div class="timeshort"> <%= c.timeshort %> </div>
      <% a = c.announces %>
      <% if not a.empty? %>
      <div class="changes">
        <span class="note"> Изменения: </span>
        <span class="announces"><%= c.announces %> </span>
      </div>
      <% end %>
      <div class="info"> <%= c.info %> </div>
    </div> <%# description %>
  </div> <%# class %>
  <% end %>
</div>
<% end %>
